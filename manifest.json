{
  "background": {
    "scripts": [ "scripts/background.js" ]
  },
  "browser_action": {
    "default_title" : "Toggle Password Fields"
  },
  "content_scripts": [{
    "js": [ "scripts/index.js" ],
    "matches": [ "<all_urls>" ],
    "run_at": "document_end"
  }],
  "description": "Hide and unhide the content of password fields on a webpage",
  "icons": {
    "48": "icons/logo.png"
  },
  "manifest_version": 2,
  "name": "Toggle Password Fields",
  "permissions": [ "tabs", "activeTab" ],
  "short_name": "Toggle Password Fields",
  "version": "0.0.1.0"
}
